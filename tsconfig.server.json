{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "jsx": "preserve",
    "noEmit": false,
    "outDir": "dist",
    "declaration": false,
    "allowImportingTsExtensions": false
  },
  "include": [
    "src/server/**/*",
    "src/cli/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "src/client/**/*",
    "**/*.test.ts"
  ]
}